@using GameList.ViewModels
@model SendFeedbackViewModel

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card gameinfo2 defaultTextColor" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <form asp-controller="Feedback" asp-action="SendFeedback" method="post" role="form">
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Feedback</h2>
                            <p class="defaultTextColor mb-5">Any feedback is welcomed!</p>
                            <div class="form-outline form-white mb-4">
                                <input asp-for="UserName" class="form-control gameinfo1searchfilter bg-warning text-black form-control-lg" value="@Model.UserName" placeholder="@Model.UserName" readonly />
                                <label asp-for="UserName" class="form-label">User Name</label>
                                <br>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-outline form-white mb-4">
                                <input asp-for="Email" class="form-control gameinfo1searchfilter bg-warning text-black form-control-lg" value="@Model.Email" placeholder="@Model.Email" readonly />
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <br>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-outline form-white mb-4">
                                <textarea asp-for="Feedback" class="form-control gameinfo1searchfilter gameinfo1" rows="5" style="resize:none;"></textarea>
                                <label asp-for="Feedback" class="form-label">Feedback</label>
                                <br>
                                <span asp-validation-for="Feedback" class="text-danger"></span>
                            </div>

                            <button class="btn gameinfo1menubuttons btn-lg px-5" type="submit">Send</button>
                        </div>

                        <div asp-validation-summary="All" class="text-danger gameinfo2p" style="list-style-type: none;"></div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

