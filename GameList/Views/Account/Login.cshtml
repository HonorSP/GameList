@using GameList.ViewModels
@model LoginViewModel

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card gameinfo2 defaultTextColor" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
                        <div class="mb-md-5 mt-md-4 pb-5">


                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="defaultTextColor mb-5">Please enter your login and password!</p>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="UserName" class="form-control form-control-lg" />
                                <label asp-for="UserName" class="form-label">Username</label>
                                <br>
                            </div>
                            <div class="form-outline form-white mb-4">
                                <input asp-for="Password" class="form-control form-control-lg" />
                                <label asp-for="Password" class="form-label">Password</label>
                                <br>
                            </div>

                            <div class="form-group">
                                    <div class="custom-checkbox">
                                        <label asp-for="RememberMe">
                                            <input asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                            </div>
                            <br>
                        <button class="btn gameinfo1menubuttons btn-lg px-5" type="submit">Login</button>
                            <p class="small mt-2 pb-lg-2"><a class="defaultTextColor" asp-action="ForgotPassword">Forgot password?</a></p>

                            <div asp-validation-summary="All" class="text-danger gameinfo2p" style="list-style-type: none;"></div>
                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a asp-action="Register" class="defaultTextColor fw-bold">Register</a>
                            </p>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>